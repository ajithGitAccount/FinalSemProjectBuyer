<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BeforeSale.NewProductForSale">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">
            <Spinner
                android:id="@+id/spinner_product_condition"
                android:layout_width="125dp"
                android:layout_height="106dp"/>

            <ImageView
                android:id="@+id/iv_product_picture"
                android:layout_width="125dp"
                android:layout_height="106dp"
                tools:srcCompat="@mipmap/ic_launcher" />

<!--            <EditText-->
<!--                android:id="@+id/etNPFSproductCondition"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="12dp"-->
<!--                android:ems="10"-->
<!--                android:hint="Product Condition"-->
<!--                android:inputType="textPersonName" />-->


            <EditText
                android:id="@+id/et_date_of_purchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Date of purchase"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/et_product_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="Company"
                android:inputType="textPersonName" />


            <EditText
                android:id="@+id/et_product_categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="Categories"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/et_product_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Enter product Details"
                android:inputType="textPersonName" />


            <EditText
                android:id="@+id/et_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/et_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Amount"
                android:inputType="textPersonName" />
            <EditText
                android:id="@+id/et_product_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Address"
                android:inputType="textPersonName" />

            <RadioGroup
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbNPFScash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Cash" />

                    <RadioButton
                        android:id="@+id/rbNPFSupi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Upi" />

                    <RadioButton
                        android:id="@+id/rbNPFScashAndUpi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Cash and Upi" />
                </LinearLayout>
            </RadioGroup>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/tv_pick_location"
                android:text="Pick Location"
                android:textColor="#074DB6"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="8dp"
                    android:text="Location"
                    android:textColor="#00C853"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="8dp"
                    android:text=" " />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text=" "
                    android:padding="8dp"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_sell_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sell" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>