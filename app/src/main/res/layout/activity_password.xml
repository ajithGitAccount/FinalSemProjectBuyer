<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/navy_blue"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".LoginActivitys.PasswordResetEmail">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_above="@id/etEmail4"
        android:layout_alignParentEnd="true"
        android:paddingStart="10dp"
        android:textColor="#ffffff"
        android:layout_alignParentStart="true"
        android:text="Enter your email ID"
        />
    <EditText
        android:id="@+id/etEmail4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/edit"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName" />
    <TextView
        android:id="@+id/error_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_alignParentEnd="true"
        android:paddingStart="10dp"
        android:layout_alignParentStart="true"
        android:text="..."
        android:layout_below="@+id/etEmail4"/>
    <Button
        android:background="@drawable/button"
        android:layout_margin="10dp"
        android:id="@+id/btnResetPassword4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/error_email"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="Reset Password" />
</RelativeLayout>